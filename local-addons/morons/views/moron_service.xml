<odoo>

    <record id="merctrans_service_view_tree" model="ir.ui.view">
        <field name="name">merctrans.service.view.tree</field>
        <field name="model">merctrans.services</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="department"/>
            </tree>
        </field>
    </record>

    <record id="merctrans_service_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">merctrans.services</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
